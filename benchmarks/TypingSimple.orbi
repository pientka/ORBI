%% Syntax
tp: type.
i: tp.
arr: tp -> tp -> tp.

tm: type.
app: tm -> tm -> tm.
lam: tp -> (tm -> tm) -> tm.

%% Judgments
oft: tm -> tp -> type.

%% Rules
oft_l: ({x:tm} oft x A -> oft (M x) B) ->
       oft (lam A (\x. M x)) (arr A B).
oft_a: oft M (arr A B) -> oft N A -> oft (app M N) B.

%% Schemas
schema xtG: block (x:tp; u:oft x A).

%% Theorems
theorem tyUniq: {H:xtG}{M:tm}{A:tp}{B:tp}
  [H |- oft M A] -> [H |- oft M B] -> A = B.

